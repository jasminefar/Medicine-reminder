{
  "manifest_version": 3,
  "name": "Medicine Reminder",
  "version": "1.0",
  "description": "Reminds you to take your medicine.",
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "permissions": [
    "alarms",
    "notifications",
    "storage"
  ],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
